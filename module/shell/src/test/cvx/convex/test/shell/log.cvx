;;
;;
;; Testing `convex.shell.log`.
;;
;;


;;;;;;;;;;


(def T
     $.test)


;;;;;;;;;; Test suites


(defn suite.main

  ^{:doc {:description "Main test suite."}}

  []

  (T/group '((T/path.conj 'convex.shell.log)

             ($.log/!.get)

             (T/trx '(= []
                        $/*result*)
                    {:description "Log is initially empty."})

             (log :foo)

             ($.log/!.get)

             (T/trx '(= [[*address* [:foo]]]
                        $/*result*)
                    {:description "Entry shows up in log."})

             ($.log/!.clear)

             (T/trx '(= []
                        $/*result*)
                    {:description "Clearing returns empty log."})

             ($.log/!.get)

             (T/trx '(= []
                        $/*result*)
                    {:description "Log has been cleared."}))))


;;;


(suite.main)
(T/print "convex.shell.log")
